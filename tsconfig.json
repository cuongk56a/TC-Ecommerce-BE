{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      // "rootDir": "src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "types": ["node"],
      "noImplicitThis": false
    },
    "include": ["src/**/*", "submodules/**/*", "src/modules/activityLog/activityLog.configs.ts"],
    "exclude": ["bin", "tests"]
  }
  